/* miniprogram/pages/select_role/role.wxss */
.select-view{
  margin-top: 40%;
}
.user-file{
  font-size: 16px;
  padding: 0 2%;
}
.val-input{
  margin-bottom: 15px;
}
.user-file .label{
  color: #666;
  padding: 6px 0;
  font-size: 16px;
}
.user-file input, .user-file textarea{
  width: 100%;
  box-sizing: border-box;
  padding: 5px 2%;
  border: 1px solid #86c7cc;
}
.category-txt{
  color: #41a8a8;
  font-size: 16px;
}
.user-file textarea{height: 100px;}
.user-file input{height: 35px;}
.user-file .orange-btn{
  margin-top: 15px;
}
.bottom-btn{
  margin: 20px 0;
  text-align: center;
}
.img-list{
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  padding: 10px 0;
}
.upload-img{
  width: 31%;
  height: 90px;
  text-align: center;
  margin-bottom: 10px;
  position: relative;
  padding: 0 1%;
}
.upload-img .pic{
  width: 100%;
  height: 90px;
}
.camera-icon{
  width:80px;
  height:80px;
}
.upload-img .del-btn{
  position: absolute;
  right: 2px;
  top: 2px;
  width: 20px;
  height: 20px;
  padding: 4px;
}