.profile{
  margin-bottom: 5px;
}
.profile .item{
  background-color: #fff;
  border-bottom: 1px solid #e2e2e2;
  font-size: 16px;
  padding: 8px;
  line-height: 40px;
}
.item .icon-l{
  padding: 0 2%;
  width: 28px;
  height: 28px;
  vertical-align:middle;
}
.item .icon-r{
  padding: 0 2%;
  float: right;
  width: 16px;
  height: 16px;
  padding-top: 12px;
}

.fb-btn{
  background: #41a8a8;
}
.btns{
  margin: 25px 0;
  text-align: center;
}
.backgroud-layer{
  background-color: rgba(0,0,0,.3);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 999;
}
.val-input{
  padding: 10px 10px 5px 10px;
}
.val-input input, .val-input picker{
  border: 1px #ccc solid;
  height: 30px;
  font: 16px;
  padding: 5px 8px;
}
.val-input .meta{
  padding-bottom: 4px;
}
.input-dialog{
  background-color: #fff;
  padding: 10px 0;
}
.bottom-btn{
  position: fixed;
  bottom: 40px;
  text-align: center;
  width: 100%;
}
.bottom-btn .fb-btn{
  width: 200px;
}
.main-profile{
  height: 100px;
  width: 100%;
  text-align: center;
  padding: 20px 0;
}
.main-profile .pic{
  height: 100px;
  width: 100px;
}
.input-dialog .meta{
  padding-left: 10px;
}
.input-dialog .new-img{
  width: 150px;
  height: 150px;
  display: block;
  margin-bottom: 10px;
}